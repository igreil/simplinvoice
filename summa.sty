\newcommand*\@SUMAlineX[6]{{
\goodbreak\nointerlineskip
    \vbox{
      \if@SUMAhor
\hrule 
      \else
        \if@SUMAfirst
        \fi
      \fi
      \hbox to\textwidth{%
\sep%
